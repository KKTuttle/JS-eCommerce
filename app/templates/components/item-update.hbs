{{#if updateItemForm}}
  <form>
    <div class='form-group'>
      <label for="itemName">Name</label>
      {{input value=itemName id='itemName' placeholder=item.itemName}}
    </div>
    <div class='form-group'>
      <label for="description">Description</label>
      {{input value=description id='description' placeholder=item.description}}
    </div>
    <div class='form-group'>
      <label for="price">$Price$</label>
      {{input value=price id='price' placeholder=item.price}}
    </div>
  </form>
  <button {{action 'updateItem' item}}>Save</button>
{{else}}
  <button {{action 'updateItemForm'}}>Update Item</button>
{{/if}}
<button {{action 'deleteItem' item}}>Delete</button>
